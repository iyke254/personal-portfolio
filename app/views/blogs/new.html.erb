<h1> New Blog </h1>


	<% if @blog.errors.any? %>
		<h3> Oops an error occured. Please try again:</h3>
		<ul>
			<% @blog.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>		


	<%= form_for @blog do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		
		<br>

		<%= f.label :content %>
		<%= f.text_area :content %>
		
		<%= f.submit  %>
		
	<% end %>