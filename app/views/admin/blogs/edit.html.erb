<h1>Edit Blog</h1>

	<% if @blog.errors.any? %>
		<h3>Please fix these errors</h3>
		<ul>
			<% @blog.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<%= form_for @blog, url: admin_blog_path(@blog) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<br>

		<%= f.label :content %>
		<%= f.text_area :content %>

		<br>

		<%= f.submit  %>
		
	<% end %>			